
doctype html
html
  head
    meta(charset='UTF-8')
    meta(http-equiv='x-ua-compatible' content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    title #{title}
    link(href='//developer.ringcentral.com/assets/images/favicon.ico?v=20181214-0738', type='image/vnd.microsoft.icon', rel='shortcut icon')
    link(rel='stylesheet', href=cdn + '/css/rcp.styles.bundle.css?' + version)
  body
    #bg
    #container
    #content-loading(style='text-align:center;padding:30px;font-size:24px') loading...
    script.
      window.rc = !{JSON.stringify(_global)}

    script(src='//unpkg.com/react@16/umd/react.production.min.js')
    script(src='//unpkg.com/react-dom@16/umd/react-dom.production.min.js')
    script(src='//unpkg.com/particle-bg/lib/particle-bg.umd.min.js')
    script.
      window.rc.onload = function() {
        document.body.removeChild(document.getElementById('content-loading'));
      };
    script(src=cdn + '/js/rcp.bundle.js?' + version, onload='window.rc.onload()')
